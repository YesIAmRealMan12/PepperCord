{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "$id": "https://www.regulad.xyz/PepperCord/configSchema.json",
  "type": "object",
  "properties": {
    "discord": {
      "type": "object",
      "properties": {
        "api": {
          "type": "object",
          "properties": {
            "token": { "type": "string", "pattern": "([a-zA-Z0-9_]{24})\\.([a-zA-Z0-9_]{6})\\.([a-zA-Z0-9_]{27})" }
          },
          "required": ["token"]
        },
        "prefix": { "type": "string", "default": "?" }
      },
      "required": ["api"]
    },
    "db": {
      "type": "object",
      "properties" : {
        "uri": { "type": "string", "format": "uri" }
      }
    }
  },
  "required": ["discord", "db"]
}
